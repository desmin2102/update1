<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp">

    <!-- Nội dung chính -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_purple"
            android:padding="10dp"
            android:text="QUẢN LÝ RẠP CHIẾU PHIM"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imBack"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/holo_purple"
                app:srcCompat="@drawable/ic_arrowback_white_admin" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="301dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/holo_purple"
                android:padding="5dp"
                android:text="TÀI KHOẢN"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imAdd"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/holo_purple"
                app:srcCompat="@drawable/ic_add_admin" />
        </LinearLayout>

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/ic_search"
            android:hint="Tìm kiếm người dùng..."
            android:padding="12dp" />

        <!-- RecyclerView hiển thị danh sách phim -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMovieList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="8dp"
            android:scrollbars="vertical" />
        <!-- Container cho Fragment -->

    </LinearLayout>

    <!-- Navigation Drawer -->

</androidx.drawerlayout.widget.DrawerLayout>
