<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp">

    <!-- Nội dung chính -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_purple"
            android:padding="10dp"
            android:text="QUẢN LÝ RẠP CHIẾU PHIM"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imBack"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/holo_purple"
                app:srcCompat="@drawable/ic_arrowback_white_admin" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="372dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/holo_purple"
                android:padding="5dp"
                android:text="THÔNG TIN RẠP    "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/rap" />

        <EditText
            android:id="@+id/edSoCot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edit_text_rounded"
            android:ems="10"
            android:hint="Tên rạp..."
            android:inputType="text" />

        <EditText
            android:id="@+id/editDiaChi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edit_text_rounded"
            android:ems="10"
            android:hint="Địa chỉ..."
            android:inputType="text" />

        <EditText
            android:id="@+id/editSoPhong"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/edit_text_rounded"
            android:ems="10"
            android:hint="Tổng số phòng..."
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btThemAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Thêm" />

            <Button
                android:id="@+id/btSuaAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Sửa" />

            <Button
                android:id="@+id/btXoaAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Xóa" />
        </LinearLayout>

        <!-- RecyclerView hiển thị danh sách phim -->
        <!-- Container cho Fragment -->

    </LinearLayout>


    <!-- Navigation Drawer -->

</androidx.drawerlayout.widget.DrawerLayout>
