<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgPoster"
            android:layout_width="170dp"
            android:layout_marginTop="10dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/button_chon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:text="LINH MIÊU"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@android:color/white"
                android:text="Thời lượng: 110 Phút"
                 />

            <TextView
                android:id="@+id/tvShowTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Khởi chiếu: 11/22/2024 12:00:00 AM"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/btnScheduled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_da_len_lich"
                android:padding="8dp"
                android:text="Đã lên lịch"
                android:textColor="@android:color/white" />
        </LinearLayout>
</LinearLayout>